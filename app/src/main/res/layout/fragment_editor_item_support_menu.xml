<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/base_gray_dark">

        <com.cupslicenew.view.ViewButton
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/fragment_editor_item_support_menu_btn_cancel"
            android:textColor="@color/base_white"
            android:textSize="14sp"
            android:text="@string/base_string_cancel"
            android:textAllCaps="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:background="@android:color/transparent"/>

        <com.cupslicenew.view.ViewButton
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/fragment_editor_item_support_menu_btn_apply"
            android:textColor="@color/base_white"
            android:textSize="14sp"
            android:text="@string/base_string_apply"
            android:textAllCaps="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@android:color/transparent"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_gray_semi_dark">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_alignParentLeft="true"
            android:id="@+id/fragment_editor_item_support_menu_horizontal_color"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/fragment_editor_item_support_menu_linear_color"></LinearLayout>
        </HorizontalScrollView>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:max="100"
            android:maxHeight="1dp"
            android:minHeight="1dp"
            android:padding="10dp"
            android:progress="50"
            android:progressDrawable="@drawable/seekbar_progress"
            android:thumb="@drawable/seekbar_thumb"
            android:id="@+id/fragment_editor_item_support_menu_seekbar"
            android:visibility="gone"/>
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:scrollbars="none"
        android:background="@color/base_white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/fragment_item_support_menu_linear_item"></LinearLayout>
    </HorizontalScrollView>

</LinearLayout>