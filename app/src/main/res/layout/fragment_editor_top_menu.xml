<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="7dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_editor_undo"
            android:id="@+id/fragment_editor_top_menu_undo"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="7dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_editor_home"
            android:id="@+id/fragment_editor_top_menu_home" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="7dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_editor_save"
            android:id="@+id/fragment_editor_top_menu_save"/>

    </LinearLayout>

</RelativeLayout>